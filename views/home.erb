<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      <img src="/images/celebration_logo.png" alt="" />
      <div class="shooting-mode">
        <p class="mode-title">Mode</p>
        <div class="btn-group btn-group-justified" role="group" aria-label="...">
<!--
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-lg btn-danger btn-default active photo-button" data-value="photo">Photo</button>
          </div>
           -->
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-lg btn-danger btn-default video-button" data-value="video">Video</button>
          </div>
        </div>
      </div>
      <div class="video-length-container">
        <div class="video-length hide">
          <p class="mode-title">Length</p>
          <div class="btn-group btn-group-justified" role="group" aria-label="...">
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-lg btn-danger btn-default" data-value="1">1 sec</button>
            </div>
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-lg btn-danger btn-default active" data-value="5">5 sec</button>
            </div>
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-lg btn-danger btn-default" data-value="10">10 sec</button>
            </div>
          </div>
        </div>
      </div>
      <div class="button" >
        <div class="btn-lg btn-danger btn-block start-button">
          <span>START</span>
        </div>
        <div class="btn-lg btn-danger btn-block recording-button active hide">
          <span class="recording-dot blink"></span><span>RECORDING</span>
        </div>
      </div>
      <br>
      <div class="">
        <p class="notice">
            NOTICE: Use of "Photo/Video Booth" grants Celebration Cinema the permission to use any video for marketing purposes.
        </p>
      </div>
    </div>
    <div class="col-md-8">
      <div class="video">
      </div>
      <div class="row timer">
        <div class="col-xs-4">
          <p class="timer-value">0</p>
        </div>
        <div class="col-xs-8">
          <p class="timer-label">SECONDS</p>
        </div>
      </div>
    </div>
  </div>
  <%= erb :email_modal %>
</div>
